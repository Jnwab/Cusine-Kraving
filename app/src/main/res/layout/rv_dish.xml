<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    card_view:cardCornerRadius="24dp"
    card_view:cardElevation="8dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- FOOD image -->
        <ImageView
            android:id="@+id/image_dish"
            android:src="@drawable/temp_food"
            android:background="@drawable/bg_food_frame"

            android:clipToOutline="true"
            android:scaleType="centerCrop"

            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <!-- Dish TITLE -->
        <TextView
            android:id="@+id/text_dish_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dish Name"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <!-- Dish REGION text -->
        <TextView
            android:id="@+id/text_dish_region"
            android:text="Region"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
             />

        <!-- Dish CATEGORY text -->
        <TextView
            android:id="@+id/text_dish_category"
            android:text="Category"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"

            />

        <!-- Button: MORE INFO -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_website"
            android:text="More Info"

            card_view:icon="@drawable/icon_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end" />

    </LinearLayout>
</androidx.cardview.widget.CardView>