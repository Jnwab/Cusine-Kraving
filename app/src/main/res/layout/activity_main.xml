<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- [ ] TODO: Change title background to something better -->
    <!-- [X] TODO: Change text font and color -->
    <!-- [X] TODO: Change color scheme -->
    <!-- [X] TODO: Customize Buttons -->

    <!-- HEADER  -->
    <ImageView
        android:id="@+id/bg_app_title"
        app:srcCompat="@drawable/bg_view"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- App Title -->
    <TextView
        android:id="@+id/text_app_title"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:fontFamily="@font/sen_bold"

        android:text="Cuisine\nCravings"
        android:textAlignment="center"
        android:textColor="@color/white"

        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@id/bg_app_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_app_title" />

    <!-- Slogan text? -->
    <TextView
        android:id="@+id/text_slogan"
        android:text="@string/slogan"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="8dp"
        android:layout_marginHorizontal="8dp"

        android:textStyle="italic"
        android:textAlignment="viewEnd"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_app_title" />



    <!-- User Input: CUISINE and CATEGORY SPINNERS -->

    <!-- CUISINE Input Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_cuisine_input"

        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:layout_marginHorizontal="8dp"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/text_slogan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_cuisine"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/cuisine"
            android:textSize="24sp"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner_cuisine_option"

            android:layout_width="160dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- CATEGORY Input Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_category_input"

        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:layout_marginHorizontal="8dp"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/layout_cuisine_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_category"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/category"
            android:textSize="24sp"
            android:textStyle="bold"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinner_category_option"

            android:layout_width="160dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Button: Find Cuisine -->
    <Button
        android:id="@+id/button_get_cuisine"
        app:icon="@drawable/icon_search"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        style="@style/Widget.Material3.Button.IconButton.Filled"

        app:layout_constraintTop_toBottomOf="@id/layout_category_input"
        app:layout_constraintEnd_toEndOf="@id/layout_category_input" />



    <!-- BackGround color behind Random Meal button -->
    <View
        android:id="@+id/bg_random_button"
        android:background="@color/light_orange"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_get_cuisine"
        app:layout_constraintBottom_toTopOf="@id/text_list_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- Button: RANDOM MEAL -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_random_meal"
        android:text="Suprise Me!"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="8dp"
        android:textSize="16dp"
        app:cornerRadius="4dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_random_button"
        app:layout_constraintBottom_toBottomOf="@id/bg_random_button"
        />


    <!-- Text: List of Meals: -->

    <TextView
        android:id="@+id/text_list_title"
        android:text="List of Dishes:"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"

        android:background="@color/raisin_black"
        android:textSize="22sp"
        android:fontFamily="@font/sen_bold"
        android:textColor="@color/platinum"

        app:layout_constraintTop_toBottomOf="@id/bg_random_button"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- RECYCLERVIEW to show results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_of_dishes"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:padding="8dp"
        android:background="@color/raisin_black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_list_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>